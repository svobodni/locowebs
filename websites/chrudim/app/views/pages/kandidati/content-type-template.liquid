---
title: Profil kandidáta
slug: content_type_template
listed: false
published: true
cache_strategy: none
response_type: text/html
position: 100
content_type: candidates
---
{% extends parent %}

{% block main %}
  <div class="container classic-content">
  <h1>{{ candidate.name }}</h1>
  
  <div class="profile">
  <div class="media">
    <span class="pull-left">
      <img class="media-object" src="{{ candidate.photo.url }}" alt="{{ candidate.name }}" width="290">
    </span>
    <div class="media-body">
      {% unless candidate.quote == blank %}
      <blockquote>
        <p>{{ candidate.quote }}</p>
        <footer>{{ candidate.name }}</footer>
      </blockquote>
      {% endunless %}
      <ul>
        <li>{{ candidate.occupation }}</li>
        <li>{{ candidate.political_party }}</li>
        <li>{{ candidate.age }} let</li>
      </ul>
      <dl class="dl-horizontal">
        {% if candidate.email != '' %}
        <dt><i title="E-mail" class="glyphicon glyphicon-envelope"></i></dt>
        <dd><a href="mailto:{{ candidate.email }}">{{ candidate.email }}</a></dd>
        {% endif %}
        {% if candidate.phone != '' %}
        <dt><i title="Telefon" class="glyphicon glyphicon-earphone"></i></dt>
        <dd>{{ candidate.phone }}</dd>
        {% endif %}
        {% if candidate.homepage_url != '' %}
        <dt><i title="Web" class="glyphicon glyphicon-globe"></i></dt>
        <dd><a href="{{ candidate.homepage_url }}">{{ candidate.homepage_url }}</a></dd>
        {% endif %}
        {% if candidate.fb_profile_url != '' %}
        <dt><i title="Facebook" class="fa fa-facebook"></i></dt>
        <dd><a href="{{ candidate.fb_profile_url }}">fb profil</a></dd>
        {% endif %}
        {% if candidate.fb_page_url != '' %}
        <dt><i title="Facebook" class="fa fa-facebook"></i></dt>
        <dd><a href="{{ candidate.fb_page_url }}">fb stránka</a></dd>
        {% endif %}
         </dl>

      
      <p>{{ candidate.profile }}</p>
  </div> <!--/.media-body -->
  </div> <!--/.media -->
  </div> <!--/.profile -->
  </div> <!--/.container -->
  
  <div class="section-white">
  <div class="container">
    <p class="text-center"><a class="btn btn-lg btn-default" href="/kandidati" role="button"><span class="glyphicon glyphicon-user"></span> Zobrazit další kandidáty</a></p>
  </div> <!-- /.container -->
  </div> <!-- /.section-white -->

{% endblock %}
