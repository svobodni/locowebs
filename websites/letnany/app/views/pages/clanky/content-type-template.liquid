---
title: Post template
slug: content_type_template
listed: false
published: true
cache_strategy: none
response_type: text/html
position: 100
content_type: posts
---
{% extends parent %}

{% block main %}
  <div class="row">
  <div class="col-md-8">
    <div class="row">

      <div class="col-md-12 col-dark col-head">

<article class="post">
  <h3 class="posted-at">
    Zveřejněno  {{ post.posted_at | localized_date: '%d.%m.%Y' }}
  </h3>

  {% if post.tags %}
    <p class="tags">
      <i class="glyphicon glyphicon-tags"></i>
      {% for tag in post.tags %}
        <span class="label label-primary">{{ tag | escape }}</span>
      {% endfor %}
    </p>
  {% endif %}
  <div class="body">
    {{ post.body }}
  </div>
</article>

          </div></div></div></div>
{% endblock %}
